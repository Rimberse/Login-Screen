<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" vgap="10" hgap="15"
	fx:controller="application.SceneSwitchingController" styleClass="SceneStyle">
	<Button text="Log In" GridPane.rowIndex="17" GridPane.columnIndex="0" onAction="#onButtonClicked"
		GridPane.rowSpan="5" GridPane.columnSpan="15" styleClass="LogInButtonStyle" maxWidth="400" maxHeight="200" alignment="CENTER"/>
	<Label GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.rowSpan="3" GridPane.columnSpan="1">
		<graphic>
			<ImageView>
				<Image url="@img/Username.png"/>
			</ImageView>
		</graphic> 
	</Label>
 	<TextField GridPane.rowIndex="0" GridPane.columnIndex="1" editable="true" promptText="Username" alignment="CENTER_LEFT" 
 		maxHeight="70" maxWidth="300" GridPane.rowSpan="5" GridPane.columnSpan="14" style="-fx-font-size:25"/>
 	<Label GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.rowSpan="3" GridPane.columnSpan="1">
		<graphic>
			<ImageView>
				<Image url="@img/Password.png"/>
			</ImageView>
		</graphic> 
	</Label>
 	<PasswordField  GridPane.rowIndex="6" GridPane.columnIndex="1" editable="true" promptText="Password" alignment="CENTER_LEFT"
 		maxHeight="70" maxWidth="300" GridPane.rowSpan="5" GridPane.columnSpan="14" style="-fx-font-size:25" />
 	<CheckBox text="Keep me logged in" GridPane.rowIndex="12" GridPane.columnIndex="0" styleClass="CheckBoxStyle" GridPane.columnSpan="2"/>
</GridPane>